<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tyler.hemoglobinmonitor">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tyler.hemoglobinmonitor.HomeScreen" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tyler.hemoglobinmonitor.HomeScreen" />
        </activity>
        <activity
            android:name=".TrendActivity"
            android:label="@string/title_activity_trend">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tyler.hemoglobinmonitor.HomeScreen" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".NewSettings"
            android:label="@string/title_activity_new_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>